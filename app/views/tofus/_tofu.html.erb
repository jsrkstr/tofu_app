<li>
  <span class="content"><%= tofu.content %></span>
  <span class="timestamp">
    <%= time_ago_in_words(tofu.created_at) %> ago.
  </span>
  <% if current_user?(tofu.user) %>
    <%= link_to "delete", tofu, method:  :delete,
                                     confirm: "You sure?",
                                     title:   tofu.content %>
  <% end %>
</li>